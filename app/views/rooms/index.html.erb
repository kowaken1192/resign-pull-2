<h1>施設一覧</h1>
<table>
  <thead>
    <tr>
      <th>施設画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>宿泊料金（/日）</th>
      <th>作成日</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
    <tr>
      <td><%= image_tag "https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png", width:200%> <br>
      <td><%= link_to room.name, room_path(room) %></td>
      <td><%= room.introduction %></td>
      <td><%= room.price %>円</td>
      <td><%= room.created_at.strftime('%Y-%m-%d') %></td>
      <td><%= link_to '編集', edit_room_path(room) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= search_form_for @q, url: search_rooms_path do |f| %>

  <%= f.label :name_or_introduction_cont ,"キーワード検索" %>
  <%= f.search_field :name_or_introduction_cont %>
  <%= f.submit "探す", class: "search-button" %>
<% end %>

